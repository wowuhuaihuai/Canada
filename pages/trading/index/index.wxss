/* pages/trading/trading.wxss */
.container{
  width: 100vw;
  min-height: 100vh;
  background: #f4f5f7;
  padding: 0;
  overflow: scroll;
}

.search{
  position: absolute;
  top: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  text-align: center;
}
.search .search_title{
  color: #FFF;
  font-size: 40rpx;
  vertical-align: middle;
  margin-right: 35rpx;
}

.search .search_icon{
  width: 28rpx;
  height: 28rpx;
  padding: 19rpx;
  display: inline-block;
  background: #FFF;
  vertical-align: middle;
  border-radius: 64rpx 0 0 64rpx ;
}

.search input{
  background: #FFF;
  display: inline-block;
  height: 66rpx;
  font-size: 28rpx;
  vertical-align: middle;
  border-radius:0 64rpx 64rpx 0;
  text-align: left;
  width: 450rpx;
}
.recommend_container{
  background: #FFF;
  width: 702rpx;
  margin: 0 24rpx;
  border-radius: 18rpx;
  position: absolute;
  top: 330rpx;
  padding-bottom: 30rpx;
}

.recommend_container .recommend_item{
  padding: 0 46rpx;
  margin:30rpx 0;
}
.kong{
  width: 100%;
  height: 1000rpx;
}

.show_container{
  background: #FFF;
  width: 702rpx;
  margin: 0 24rpx 50rpx 24rpx;
  border-radius: 18rpx;
  top: -100rpx;
  padding-bottom: 30rpx;

}
.show_container .show_nav{
  float: left;
  width: 632rpx;
  white-space: nowrap; 
  /* overflow: hidden; */
  margin:30rpx 0;
  /* text-overflow:ellipsis; */
  overflow-x: scroll;

}
.show_container .show_nav text{
 display: inline-block;
 margin-left:26rpx;
 font-size: 26rpx;
 padding:0 4rpx
}

.show_container .show_nav .show_active{
  border-bottom:6rpx solid #ff0000;
 }

.show_container .show_open{
  float: right;
  width: 40rpx;
  height: 40rpx;
  margin:35rpx 30rpx 30rpx 0 ;
}

.show_container .show_item{
  display: flex;
  justify-content:space-between;
  margin: 0 36rpx;
  padding:36rpx;
}

.show_container .show_item:not(:last-child){
  border-bottom: 1rpx solid #d2d2d2;
}


.show_container .show_item .show_img{
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #d2d2d2;
  border-radius: 24rpx;
  margin-left: 16rpx;
}
.show_container .show_item .show_right{
  width: 364rpx;
  margin-left: 24rpx;

}
.show_container .show_item .show_title{
  font-size: 26rpx;
  display: inline-block;
  margin-top:16rpx
}
.show_container .show_item .show_look{
  padding:10rpx 0;
  margin:50rpx 0 0 0;
  width: 160rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #7c7c7c;
  background: #f4f5f7;
  border-radius: 29rpx;

}