/* pages/reservation/reservation.wxss */
.container{
    margin: 32rpx;
    background: #FFF;
    border-radius: 20rpx;
    padding: 0 20rpx;
}
.item{
    height: 128rpx;
    font-size: 28rpx;
    /* line-height: 64rpx; */
}
.item:not(:last-child){
    border-bottom: 1rpx solid #d5d5d5;
  } 
  .item text{
    height: 128rpx;
    line-height: 34rpx;
    padding-left: 30rpx;
    color: #232323;
    font-weight: 300;
  }
.item input{
    height: 128rpx;
    padding-left: 40rpx;
    width: 470rpx;
  }
.confirm{
    font-size: 26rpx;
    color: #232323;
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
    margin-bottom: 20rpx;
}
.confirm checkbox{
    position: relative;
    top: -4rpx;
}
.confirm checkbox .wx-checkbox-input{
    border-radius: 50%;/* 圆角 */
    width: 32rpx; /* 背景的宽 */
    height: 32rpx; /* 背景的高 */
  }
button{
    width: 706rpx !important;
    height: 92rpx !important;
    background: #4a4a4a;
    padding:0 !important;
    color: #FFF;
    font-size: 32rpx;
    display: block;
    border-radius: 46rpx !important;
    line-height: 92rpx !important;
}
.wrapper{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.3);
  position: absolute;
  top: 0;
  left: 0;
}
.success{
  width: 430rpx;
  height: 430rpx;
  background: #FFF;
  position: absolute;
  top:180rpx;
  left: 160rpx;
  z-index: 100;
  border-radius: 20rpx;
}
.success image{
  top:-34rpx;
  left: 152rpx;
  position: absolute;
  height: 126rpx;
  width: 126rpx;
  border-radius: 28rpx;
}
.success .back{
  height: 69rpx !important;
  width: 286rpx !important;
  line-height: 69rpx !important;
  position: absolute;
  left: 74rpx;
  bottom: 44rpx;
}
.success .title{
  display: block;
  font-size: 32rpx;
  padding-top: 132rpx;
  padding-bottom: 25rpx;
  text-align: center;
}
.success .desc{
  display: block;
  font-size: 28rpx;
  padding-top: 20rpx;
  padding: 0 75rpx ;
  text-align: center;
  color: #c7c7c7;
}
